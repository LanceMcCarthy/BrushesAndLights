<Page
    x:Class="MaterialDemo.Uwp.Views.LightsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MaterialDemo.Uwp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:brushes="using:MaterialDemo.Uwp.Brushes"
    xmlns:lights="using:MaterialDemo.Uwp.Lights"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <brushes:HostBackdropEffectBrush />
        </Grid.Background>
        <Grid x:Name="XamlLightsGrid"
              Width="512"
              Height="384"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">

            <Grid.Background>
                <!-- Open MaterialBrush.cs and see how LoadedImageSurface uses a NormalMap jpg image for the lighting -->
                <brushes:MaterialBrush />
                <!--<brushes:CobblestoneMaterialBrush/>-->
            </Grid.Background>

            <Grid.Lights>
                <lights:HoverLight />
                <lights:AmbLight />
            </Grid.Lights>
        </Grid>
    </Grid>
</Page>
